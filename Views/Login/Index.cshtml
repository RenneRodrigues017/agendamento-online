@using Barbearia.Models.ViewsModels
@model LoginViewModel

@{
    ViewBag.Title = "Login - AgendaPrime";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        background: linear-gradient(rgba(0,0,0,0.85), rgba(0,0,0,0.85)), 
                    url('https://images.unsplash.com/photo-1503951914875-452162b0f3f1?auto=format&fit=crop&w=1350&q=80');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Poppins', sans-serif;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 40px;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 25px 50px rgba(0,0,0,0.3);
    }

    /* Estilização do Novo Nome AgendaPrime */
    .brand-logo {
        font-size: 2rem;
        font-weight: 800;
        color: #0d6efd;
        text-decoration: none;
        display: block;
        text-align: center;
        margin-bottom: 30px;
        letter-spacing: -1px;
    }

    .brand-logo span {
        color: #fff;
        font-weight: 300;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.9) !important;
        border-radius: 10px;
        padding: 12px;
        border: none;
        transition: all 0.3s;
    }

    .form-control:focus {
        box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.4);
        transform: scale(1.02);
    }

    .btn-login {
        background-color: #0d6efd;
        border: none;
        padding: 12px;
        border-radius: 10px;
        font-weight: bold;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .btn-login:hover {
        background-color: #0a58ca;
        box-shadow: 0 0 20px rgba(13, 110, 253, 0.6);
        transform: translateY(-2px);
    }

    .text-light-50 {
        color: rgba(255,255,255,0.6);
    }

    /* Ícone de Agenda Animado */
    .animate-calendar {
        display: inline-block;
        transition: transform 0.3s ease;
    }

    .brand-logo:hover .animate-calendar {
        transform: scale(1.2) rotate(-5deg);
    }
</style>

<div class="container d-flex justify-content-center">
    <div class="login-card text-white" data-aos="fade-down" data-aos-duration="1000">
        
        <a href="/" class="brand-logo mb-4">
            <i class="bi bi-calendar2-check-fill me-2 animate-calendar"></i>AGENDA<span>PRIME</span>
        </a>

        <h4 class="text-center mb-4 fw-light">Bem-vindo ao seu portal</h4>

        @using (Html.BeginForm("FazerLogin", "Login", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger small border-0 py-2" })

            <div class="mb-3 text-start">
                <label class="form-label small fw-bold text-light-50">ACESSO</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-0"><i class="bi bi-person-fill text-primary"></i></span>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "E-mail cadastrado", type = "email" } })
                </div>
            </div>

            <div class="mb-4 text-start">
                <label class="form-label small fw-bold text-light-50">SENHA PRIVADA</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-0"><i class="bi bi-shield-lock-fill text-primary"></i></span>
                    @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", placeholder = "Sua senha secreta", type = "password" } })
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-login w-100 mb-4 shadow">
                Entrar agora <i class="bi bi-chevron-right ms-2"></i>
            </button>
            
            <div class="text-center">
                <a asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none small hover-underline">
                    <i class="bi bi-house-door me-1"></i> Retornar ao site principal
                </a>
            </div>
        }
    </div>
</div>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({ once: false });
</script>