    /**
     * ETAPA 03: Geração dos Cards de Data (Scroll Horizontal)
     */
    function gerarCardsData() {
        const container = document.getElementById('dateScroll');
        container.innerHTML = ''; // Limpa o container

        const hoje = new Date();
        const diasSemana = ['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb'];

        // Geramos cards para os próximos 15 dias
        for (let i = 0; i < 15; i++) {
            const dataAtual = new Date();
            dataAtual.setDate(hoje.getDate() + i);

            const diaSemanaNome = diasSemana[dataAtual.getDay()];
            const diaMesNumero = dataAtual.getDate();

            // CORREÇÃO: Usando a função local para evitar erro de fuso horário (ISO)
            const dataFormatoISO = formatarDataLocal(dataAtual);

            // Cria o elemento visual do card
            const card = document.createElement('div');

            // Define a classe active se for o primeiro card (hoje)
            const classeAtiva = (i === 0) ? 'active' : '';
            card.className = `date-card ${classeAtiva}`;

            // Define o valor no input hidden caso seja o primeiro
            if(i === 0) {
                document.getElementById('dataSelecionada').value = dataFormatoISO;
            }

            card.innerHTML = `
                <span class="day-name">${diaSemanaNome}</span>
                <span class="day-number">${diaMesNumero}</span>
            `;

            // Evento de clique no card de data
            card.onclick = function() {
                // Remove classe ativa de todos e adiciona no clicado
                document.querySelectorAll('.date-card').forEach(c => c.classList.remove('active'));
                card.classList.add('active');

                // Atualiza o valor do input hidden e recarrega os horários
                document.getElementById('dataSelecionada').value = dataFormatoISO;
                carregarHorariosReais();
            };

            container.appendChild(card);
        }
    }

    /**
     * ETAPA 04: Busca e Renderização dos Horários
     */
    async function carregarHorariosReais() {
        const grade = document.getElementById('grade-horarios');
        const loader = document.getElementById('carregando-horarios');
        const dataInput = document.getElementById('dataSelecionada').value;

        // Validação básica: precisa de barbeiro e data
        if (!barbeiroIdSelecionado || !dataInput) return;

        // Atualiza o texto da data selecionada na tela (Inverte YYYY-MM-DD para DD/MM/YYYY)
        const partes = dataInput.split('-');
        const dataFormatada = `${partes[2]}/${partes[1]}/${partes[0]}`;
        document.getElementById('texto-data-selecionada').innerText = dataFormatada;

        // Prepara a interface para o carregamento
        grade.innerHTML = '';
        loader.classList.remove('d-none');

        try {
            // Chamada para o servidor (Controller Agendamento)
            const url = `/Agendamento/ObterHorariosDisponiveis?barbeiroId=${barbeiroIdSelecionado}&data=${dataInput}`;
            const response = await fetch(url);
            const horarios = await response.json();

            loader.classList.add('d-none');

            // --- Lógica de Filtro para Horários Passados (Caso seja hoje) ---
            const agora = new Date();
            const dataHojeISO = formatarDataLocal(agora);

            const horariosFiltrados = horarios.filter(horaString => {
                // Se o usuário selecionou um dia futuro, mostra todos os horários
                if (dataInput > dataHojeISO) return true;

                // Se for hoje, comparamos a hora do agendamento com a hora atual
                const [horas, minutos] = horaString.split(':').map(Number);
                const dataHoraAgendamento = new Date();
                dataHoraAgendamento.setHours(horas, minutos, 0, 0);

                return dataHoraAgendamento > agora;
            });

            if (horariosFiltrados.length === 0) {
                grade.innerHTML = `
                    <div class="alert alert-warning border-0 bg-warning bg-opacity-10 text-warning w-100 text-center">
                        Não há horários disponíveis para esta data.
                    </div>`;
            } else {
                horariosFiltrados.forEach(hora => {
                    const btn = document.createElement('button');
                    btn.type = 'button';
                    btn.className = 'btn-horario-new';
                    btn.innerHTML = `<i class="bi bi-clock"></i> ${hora}`;
                    btn.onclick = () => abrirModalFinalizacao(hora);
                    grade.appendChild(btn);
                });
            }
        } catch (error) {
            console.error("Erro ao carregar horários:", error);
            loader.classList.add('d-none');
            grade.innerHTML = '<p class="text-danger">Erro ao conectar com o servidor.</p>';
        }
    }

    /**
