@model Barbearia.Models.ViewModels.AgendamentoClienteViewModel
@Html.AntiForgeryToken()
@{
    Layout = "_Layout";
    ViewData["Title"] = "Agendamento - AgendaPrime";
}

<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        /* Fundo branco sólido ou um cinza muito claro */
        background-color: #f8f9fa;
        color: #212529; /* Texto cinza escuro/preto */
        font-family: 'Poppins', sans-serif;
    }

    .prime-card {
        /* Fundo branco sólido para destacar do fundo da página */
        background: #ffffff;
        border: 1px solid #dee2e6;
        border-radius: 24px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    }

    .date-card, .btn-horario-new {
        border: 1px solid rgba(13, 110, 253, 0.2) !important;
    }

    .text-primary-prime {
        color: #0d6efd !important;
    }

    /* Ajuste para textos secundários que eram brancos */
    .lead, .text-white-50, .day-name {
        color: #6c757d !important;
    }

    .item-selecionavel p {
        color: #212529 !important; /* Nome dos barbeiros em preto */
    }

    .list-group-item {
        background: #ffffff !important;
        border: 1px solid #eee !important;
        color: #212529 !important;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

        .list-group-item:hover {
            background: rgba(13, 110, 253, 0.05) !important;
            transform: scale(1.01);
        }

    .servico-selecionado {
        background: linear-gradient(90deg, #0d6efd, #00d4ff) !important;
        color: white !important;
        border: none !important;
    }

    .form-control {
        background: #ffffff !important;
        border: 1px solid #ced4da !important;
        color: #212529 !important;
    }

    .btn-horario-new {
        background: #ffffff;
        color: #212529;
    }

        .btn-horario-new:hover {
            color: white; /* Texto volta a ser branco quando passa o mouse no azul */
        }

    #galeria-cortes {
        background: #f1f3f5;
        border: 1px solid #dee2e6;
        color: #212529;
    }

    .date-card {
        background: #ffffff;
        border: 1px solid #dee2e6;
    }

        .date-card.active {
            color: white !important;
        }

            .date-card.active .day-name {
                color: white !important;
            }

    /* Ajuste do Modal para Fundo Branco */
    .modal-content {
        background: #ffffff !important;
        color: #212529 !important;
    }

    .btn-close {
        filter: none; /* Remove o filtro branco do botão fechar */
    }

    /* Botão da Galeria */
    .btn-outline-light {
        color: #212529;
        border-color: #dee2e6;
    }

        .btn-outline-light:hover {
            background-color: #212529;
            color: white;
        }
    /* Container de Scroll das Datas */
    .date-scroll-container {
        display: flex;
        gap: 12px;
        overflow-x: auto;
        padding: 10px 5px;
        scrollbar-width: none; /* Firefox */
    }

        .date-scroll-container::-webkit-scrollbar {
            display: none; /* Chrome/Safari */
        }

    .date-card {
        min-width: 70px;
        height: 90px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: #fff;
        border: 1px solid #dee2e6;
        border-radius: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .date-card.active {
            background: #0d6efd !important;
            color: white !important;
            border-color: #0d6efd !important;
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
        }

    .day-name {
        font-size: 0.8rem;
        font-weight: 500;
    }

    .day-number {
        font-size: 1.2rem;
        font-weight: 700;
    }

    /* Grade de Horários */
    .time-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
        gap: 12px;
        margin-top: 20px;
    }

    .btn-horario-new {
        background: #fff;
        border: 1px solid #0d6efd;
        color: #0d6efd;
        padding: 10px;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.2s;
    }

        .btn-horario-new:hover {
            background: #0d6efd;
            color: white;
        }

    /* Estilo para o item selecionado (Resumo) */
    .selecionado-resumo {
        background: transparent;   /* remove fundo */
        border-radius: 0;           /* remove formato de card */
        padding: 0;                 /* remove espaço interno */
        
        display: flex;
        align-items: center;
        justify-content: space-between;

        animation: fadeIn 0.5s;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
        .cursor-zoom {
            cursor: zoom-in;
            transition: transform 0.3s ease;
        }

            .cursor-zoom:hover {
                transform: scale(1.05);
            }
    }

    /* Wrapper fixo */
#meus-agendamentos-wrapper {
    position: relative;
    background: #ffffff;
    border: 1px solid #dee2e6;
    box-shadow: 0 10px 30px rgba(0,0,0,.06);
    border-radius: 24px;
    margin-bottom: 40px;
}


/* Header clicável */
#meus-agendamentos-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 18px 24px;
    cursor: pointer;
}

#meus-agendamentos-header .titulo {
    font-size: 1.3rem;
    font-weight: 700;
    color: #0d6efd; /* azul do projeto */
}

/* Ícone animado */
#icone-toggle {
    font-size: 1.4rem;
    transition: transform 0.3s ease;
}

#meus-agendamentos-body {
    overflow: hidden;
    transition: opacity .3s ease;
}

.agendamentos-fechado {
    display: none;
}

.agendamentos-aberto {
    display: block;
    max-height: 260px;
    overflow-y: auto;
    padding: 20px 24px 24px;
}

/* MODAL - tamanho controlado */
#modalAgendamentosCliente .modal-dialog {
    max-height: 90vh;
}

/* Conteúdo do modal */
#modalAgendamentosCliente .modal-content {
    max-height: 90vh;
    display: flex;
    flex-direction: column;
}

/* Header fixo */
#modalAgendamentosCliente .modal-header {
    flex-shrink: 0;
}

/* BODY com scroll */
#modalAgendamentosCliente .modal-body {
    overflow-y: auto;
    max-height: calc(90vh - 70px); /* desconta o header */
}

@@media (max-width: 768px) {
    #modalAgendamentosCliente .modal-dialog {
        max-height: 80vh;
        margin: 10px;
    }

    #modalAgendamentosCliente .modal-body {
        max-height: calc(80vh - 60px);
    }
}


@@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Ajuste da tabela */
#meus-agendamentos-body table {
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
}
/* Modal da galeria */
#modalGaleria .modal-dialog {
    max-width: 90vw;
}

.modal-gallery-img {
    max-width: 100%;
    max-height: 85vh;        /* 🔥 trava altura */
    object-fit: contain;    /* 🔥 enquadra sem cortar */
    border-radius: 20px;
    display: block;
    margin: auto;
    box-shadow: 0 15px 40px rgba(0,0,0,0.4);
}

/* Estilo para a imagem dentro do modal da galeria */
        .modal-gallery-img {
            max-width: 100%;
            max-height: 85vh;        /* 🔴 LIMITE DE ALTURA */
            object-fit: contain;    /* 🔴 ENQUADRAMENTO CORRETO */
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.4);
        }
.quero-ser-prime {
    cursor: pointer;
    font-weight: 600;
    font-size: 1.2rem;
    user-select: none;
}

.texto-branco {
    color: #ffffff;
}

.texto-azul {
    color: #0d6efd; /* azul Bootstrap */
}
.agendamento-card {
    padding: 20px;
    margin-bottom: 16px;
</style>

