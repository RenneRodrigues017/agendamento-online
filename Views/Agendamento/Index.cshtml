<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    // Inicialização da biblioteca de animações
    AOS.init({ duration: 800 });

    // Variáveis globais de controle do agendamento
    let barbeiroIdSelecionado = null;
    let servicoIdSelecionado = null;
    let horaSelecionada = null;

    /**
     * FUNÇÃO AUXILIAR: Formata data para YYYY-MM-DD respeitando o fuso horário local
     */
    function formatarDataLocal(data) {
        const ano = data.getFullYear();
        const mes = String(data.getMonth() + 1).padStart(2, '0');
        const dia = String(data.getDate()).padStart(2, '0');
        return `${ano}-${mes}-${dia}`;
    }

    // Executa ao carregar a página
    document.addEventListener("DOMContentLoaded", function() {
        // Inicializamos o valor da data com o dia de hoje (Local, não UTC)
        const hoje = new Date();
        document.getElementById('dataSelecionada').value = formatarDataLocal(hoje);
    });

        async function selecionarBarbeiro(id, nome, foto) {
        barbeiroIdSelecionado = id;

        // UI: Esconde lista e TÍTULO, mostra resumo
        document.getElementById('titulo-barbeiro').classList.add('d-none');
        document.getElementById('lista-barbeiros').classList.add('d-none');
        document.getElementById('barbeiro-escolhido').classList.remove('d-none');

        document.getElementById('resumo-barbeiro-nome').innerText = nome;
        document.getElementById('resumo-barbeiro-img').src = foto;

        document.getElementById('booking-progress').style.width = '50%';
        const secaoServicos = document.getElementById('secao-servicos');
        secaoServicos.classList.remove('d-none');
        secaoServicos.scrollIntoView({ behavior: 'smooth', block: 'center' });

        // Se o serviço já foi selecionado, reaplica data e horários
        if (servicoIdSelecionado) {
            document.getElementById('secao-data').classList.remove('d-none');
