    /**
     * FINALIZAÇÃO: Envio dos dados para o C#
     */
    async function enviarAgendamento() {
        const nome = document.getElementById('clienteNome').value;
        const telefone = document.getElementById('clienteTelefone').value;
        const data = document.getElementById('dataSelecionada').value;
        const elProf = document.getElementById('resumo-barbeiro-nome');
        const nomeProfissionalSelecionado = elProf ? elProf.innerText : '';

        if (!nome || !telefone) {
            Swal.fire({
                icon: 'warning',
                title: 'Dados incompletos',
                text: 'Por favor, informe seu nome e WhatsApp.',
                background: '#1a1a1a',
                color: '#fff'
            });
            return;
        }

        const dadosAgendamento = {
            barbeiroId: barbeiroIdSelecionado,
            nomeProfissional: nomeProfissionalSelecionado,
            servicoId: servicoIdSelecionado,
            hora: horaSelecionada,
            data: data,
            nomeCliente: nome,
            telefoneCliente: telefone
        };

        const tokenElemento = document.querySelector('input[name="__RequestVerificationToken"]');
        const tokenValue = tokenElemento ? tokenElemento.value : "";

        try {
            Swal.fire({
                title: 'Reservando seu horário...',
                allowOutsideClick: false,
                didOpen: () => { Swal.showLoading(); }
            });

            const resposta = await fetch('/Agendamento/Confirmar', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': tokenValue
                },
                body: JSON.stringify(dadosAgendamento)
            });

            if (resposta.ok) {
                Swal.fire({
                    title: 'Agendamento Confirmado!',
                    text: 'Seu horário foi reservado com sucesso.',
                    icon: 'success',
                    background: '#1a1a1a',
                    color: '#fff'
                }).then(() => {
                    location.reload();
                });
            } else {
                const mensagemErro = await resposta.text();
                Swal.fire({ icon: 'error', title: 'Falha', text: mensagemErro, background: '#1a1a1a', color: '#fff' });
            }
        } catch (erro) {
            Swal.fire({ icon: 'error', title: 'Erro', text: 'Falha na conexão.', background: '#1a1a1a', color: '#fff' });
        }
    }
